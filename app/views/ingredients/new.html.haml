.row
  - provide(:title, 'Enter food')
  = link_to "Back", root_url, class: "button tiny back"
  .row.clear
    .small-12.columns.center
      %h2 Add the food you just ate
  .row
  = form_for(@ingredient) do |f|
    = render 'shared/error_messages', object: f.object
    .row
      .small-offset-4.small-4.columns
        .hide
          = f.label :search
        = f.text_field :search, placeholder: "Search for your food..."
      .small-4.columns
    .row
      .small-offset-4.small-4.columns
        .hide
          = f.label "Simple Food?"
        %abbr.inline{ title: "These foods don't have recipes.  For example: apple, milk, etc." }
          .explainer.inline Simple Food?
        = f.radio_button :source, "simple",class: "inline"
      .small-4.columns
    .row
      .small-offset-4.small-4.columns
        .hide
          = f.label "Store Bought?"
        %abbr.inline{ title: "These processed or prepared foodsare bought in a grocery store.  For example: oreos, lean cuisine, etc." }
          .explainer.inline Store Bought?
        = f.radio_button :source, "grocery", class: "inline"
      .small-4.columns
    .row
      = f.submit "Add", class: "button small"

